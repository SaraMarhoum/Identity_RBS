@model IEnumerable<Core_RBS.Models.NewSudentClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adresse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adresse)
            </td>
            <td>
                <a class="btn_crud" asp-action="Edit" asp-route-id="@item.id"><i class="fa fa-edit"></i></a> |
                <a class="btn_crud" asp-action="Details" asp-route-id="@item.id"><i class="fa fa-info"></i></a> |
                <a class="btn_crud" asp-action="Delete" asp-route-id="@item.id"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
